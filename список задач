using System;
using System.Collections.Generic;

class TodoList
{
    static List<string> tasks = new List<string>();
    
    static void Main()
    {
        while (true)
        {
            Console.Clear();
            Console.WriteLine("üìù –ú–æ–π —Å–ø–∏—Å–æ–∫ –∑–∞–¥–∞—á\n");
            
            if (tasks.Count == 0)
                Console.WriteLine("–°–ø–∏—Å–æ–∫ –ø—É—Å—Ç. –î–æ–±–∞–≤—å –ø–µ—Ä–≤—É—é –∑–∞–¥–∞—á—É!");
            else
                for (int i = 0; i < tasks.Count; i++)
                    Console.WriteLine($"{i + 1}. {tasks[i]}");
            
            Console.WriteLine("\n1 - –î–æ–±–∞–≤–∏—Ç—å | 2 - –£–¥–∞–ª–∏—Ç—å | 0 - –í—ã—Ö–æ–¥");
            Console.Write("–í—ã–±–µ—Ä–∏ –¥–µ–π—Å—Ç–≤–∏–µ: ");
            
            string choice = Console.ReadLine();
            
            switch (choice)
            {
                case "1":
                    AddTask();
                    break;
                case "2":
                    RemoveTask();
                    break;
                case "0":
                    return;
            }
        }
    }
    
    static void AddTask()
    {
        Console.Write("–í–≤–µ–¥–∏ –∑–∞–¥–∞—á—É: ");
        string task = Console.ReadLine();
        if (!string.IsNullOrWhiteSpace(task))
            tasks.Add(task);
    }
    
    static void RemoveTask()
    {
        if (tasks.Count == 0) return;
        
        Console.Write("–ù–æ–º–µ—Ä –∑–∞–¥–∞—á–∏ –¥–ª—è —É–¥–∞–ª–µ–Ω–∏—è: ");
        if (int.TryParse(Console.ReadLine(), out int index) && index > 0 && index <= tasks.Count)
            tasks.RemoveAt(index - 1);
    }
}
